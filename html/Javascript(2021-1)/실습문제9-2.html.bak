 <body>
  <script>
  var n,i,sosu;
  n = parseInt(prompt("양의 정수를 입력하시오"));
  sosu=true;
  for(i=2; i<n; i++){   //for(i=2; i<=(n-1); i++){
	  if(n % i == 0){    // i로 나누어 떨어진다면
		  sosu =false;//소수가 아니므로 변수 sosu에 false를 할당
		  break; //for문 반복문을 벗어남
		  }
		 }
  if(sosu){
	  document.write(n+"은 소수입니다.<br>");
	  }else{
		  document.write(n+"은 소수가 아닙니다.<br>");
	  }
  </script>
 </body>
